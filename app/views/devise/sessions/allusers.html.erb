
<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Usuarios#index</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li class="active">Usuarios</li>
        </ol>
      </div>
    </div>
  </div>


  <div class="col-sm-2">
    <div class="float-left">
      <%= button_to "Nuevo Usuario", "users/sign_up",data:{target:"#modalusers",toggle:"modal"}, remote: true, class: "btn btn-info",
                    :method => :get %>
    </div>
  </div>

</div>

<div class="content mt-3">

  <div class="animated fadeIn">
    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Lista de Metas</strong>
          </div>
          <div class="card-body">
            <table id="tblmetas" class="table table-striped table-bordered">
              <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Identificaci&oacute;n</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">email</th>
                <th scope="col">Ciudad Asignada</th>
                <th scope="col">&Uacute;ltima conexi&oacute;n</th>
                <th scope="col">Acci&oacute;n</th>
              </tr>
              </thead>
              <tbody>

              <% @users.each do |row| %>
                <tr>
                  <th scope="row"><%= row.id %></th>
                  <th scope="row"><%= row.identification %></th>
                  <th scope="row"><%= row.name %></th>
                  <td scope="row"><%= row.surname %></td>
                  <th scope="row"><%= row.email %></th>

                  <td><% unless row.city.nil? %>
                      <%= row.city.name %>
                    <% end %></td>
                  <td><%= row.last_sign_in_at %></td>
                  <td><%= button_to "Editar", edit_user_registration_path(row.id),data:{target:"#modalusers",toggle:"modal"},
                                    remote: true, class:"btn btn-primary",
                                    :method => :get %>
                    <%= button_to "Eliminar","newuser",data:{target:"#modalDelGlobal",toggle:"modal"}, remote: true,
                                  class:"btn btn-danger",
                                  :method => :get %>
                  </td>
                </tr>

              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div>

<div class="modal fade" id="modalusers" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" id="modaluserdialog">

  </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#tblmetas').DataTable();
        $('#modalusers').on('hidden.bs.modal', function (e) {
            $("#modaluserdialog").html("");
        });

        jQuery(".chosen").chosen({
            disable_search_threshold: 10,
            no_results_text: "Oops, nothing found!",
            width: "100%"
        });
    } );
</script>
