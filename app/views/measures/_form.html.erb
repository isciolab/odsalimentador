
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @measure, remote: true do |f| %>
        <div class="modal-body">
          <div class="card-body card-block">
            <%= render 'layouts/viewerror', object: @measure %>
          <div class="form-group">
            <label for="company" class=" form-control-label">Nombre</label>
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre",autofocus:true %>
          </div>
        </div>
        </div>
        <div class="modal-footer">
          <%= f.submit title_button, class: "btn btn-primary"%>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </div>
      <% end %>
    </div>
  </div>
