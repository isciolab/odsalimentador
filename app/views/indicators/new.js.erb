
/*llamo el mismo form, pero le paso las variables como los titulos, ya que se usa la misma vista para edit*/
$("#modalindicatordialog").html('<%= j render "form", {title: "Nuevo Indicador",title_button:"Crear"} %>');

$(function() {
    jQuery(".chosen").chosen({
        disable_search_threshold: 10,
        no_results_text: "Oops, nothing found!",
        width: "100%"
    });
    setTimeout( function (){
        $('*[autofocus]').focus()
    },500)

    $("select#goal_goal_id").on("change", function() {
        $.ajax({
            url:  "/filter_targets_by_goals",
            type: "GET",
            data: { selected_goal: $(this).val(),selectargetid:"target_id_modal" }
        });
    });
});
