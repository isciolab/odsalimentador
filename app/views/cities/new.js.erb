
/*llamo el mismo form, pero le paso las variables como los titulos, ya que se usa la misma vista para edit*/
$("#modalcitydialog").html('<%= j render "form", {title: "Nuevo Ciudad",title_button:"Crear"} %>');

$(function() {
    jQuery(".chosen").chosen({
        disable_search_threshold: 10,
        no_results_text: "Oops, nothing found!",
        width: "100%"
    });

    $("#city_group_cities_id").chosen();
    setTimeout( function (){
        $('*[autofocus]').focus()
    },500)

    if($.fn.cloudinary_fileupload !== undefined) {
        $("input.cloudinary-fileupload[type=file]").cloudinary_fileupload();
    }

});

