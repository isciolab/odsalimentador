
<div class="row bg-title">
  <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
    <h4 class="page-title">Metas</h4></div>
  <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
    <ol class="breadcrumb">
      <li class="active">Metas</li>
    </ol>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">


  <div class="col-md-12">
    <div class="white-box">


      <div class="row">
        <div class="btn-group m-b-20">

          <div class="col-sm-2">
            <div class="float-left">
              <%= button_to "Nueva Meta", { action: "new" },data:{toggle:"modal"}, remote: true, class: "btn btn-info",
                            :method => :get %>
            </div>
          </div>


        </div>
      </div>
      <br>

      <div class="row">
        <div class="form-group">
          <div class="col-md-1">
            <label>Filtrar por ODS</label>
          </div>
          <div class="col-md-5">    <%= select("goal", "goal_id", Goal.all.collect {|p| [ p.number, p.id ] },
                                               { include_blank: false,
                                                 prompt: "Seleccione Un ODS"},
                                               {:class => "form-control chosen", :onchange=>"Target.tableCargarTodos()"}) %></div>

        </div>
      </div>
      <br>

      <div class="table-responsive" id="opentbltarget" style="position: relative"></div>


    </div>


  </div>
</div>


<div class="modal fade" id="modalmetas" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" id="modaltargetdialog">

  </div>
</div>


<script type="text/javascript">
    $(document).ready(function() {

        Target.initTarget();
    });
</script>



