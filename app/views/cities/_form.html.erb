<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
id="modalcity">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @city, remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre",autofocus:true %>
          </div>
          <div class="form-group ">
            <%= f.collection_select :department_id, Department.all, :id, :name, {prompt: "Seleccione un Departamento"},
                                    {class: "custom-select"} %>
          </div>

          <div class="form-group ">
            <%= f.collection_select :group_cities_id, GroupCity.all, :id, :name, {prompt: "Seleccione un Grupo de Ciudad"},
                                    {class: "custom-select"} %>
          </div>

          <div class="form-group ">
            <%= f.collection_select :goal_group_id, GoalGroup.all, :id, :name, {prompt: "Seleccione un Grupo ODS"},
                                    {class: "custom-select"} %>
          </div>

          <div class="form-group row">
            <div class="col-sm-3">
              <label class="form-check-label" for="gridCheck">
                Capital
              </label>
            </div>
            <div class="col-sm-9">
              <%= f.check_box :is_capital, class: "form-check-input", checked_value:"1",uncheked_value:"0" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.text_field :rccv_program, class: "form-control input-lg", placeholder: "Programa RCCV" %>
          </div>
          <div class="form-group">
            <%= f.text_field :total_population, class: "form-control input-lg", placeholder: "Población total" %>
          </div>
          <div class="form-group">
            <%= f.text_field :metropolitan_area, class: "form-control input-lg", placeholder: "Área metropolitana" %>
          </div>
          <div class="form-group">
            <%= f.text_field :city_system_dnp, class: "form-control input-lg", placeholder: "Sistema de ciudades DNP" %>
          </div>
          <div class="form-group">
            <%= f.text_field :dnp_category, class: "form-control input-lg", placeholder: "Categorías DNP" %>
          </div>
          <div class="form-group">
            <%= f.text_field :ddt_typology, class: "form-control input-lg", placeholder: "Tipología DDT (DNP)" %>
          </div>

        </div>
        <div class="modal-footer">
          <%= f.submit title_button, class: "btn btn-primary btn-lg btn-block", disabled:true %>
        </div>
      <% end %>
    </div>
  </div>
</div>