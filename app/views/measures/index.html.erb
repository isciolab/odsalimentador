
<div class="page-bar">
  <ul class="page-breadcrumb">
    <li>
      <a href="#">Lista de Unidades de Medida</a>
      <i class="fa fa-circle"></i>
    </li>
  </ul>
</div>

<h1 class="page-title"> Unidades de Medida
  <small>Crear y Editar Unidades de Medida</small>
</h1>

<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet light bordered">
      <div class="portlet-title">
        <div class="caption font-dark">
          <i class="icon-settings font-dark"></i>
          <span class="caption-subject bold uppercase"> Lista de Unidades de Medida</span>
        </div>

      </div>
      <div class="portlet-body">
        <div class="table-toolbar">
          <div class="row">

            <div class="col-sm-2">
              <%= button_to "Nueva Unidad de Medida", { action: "new" },data:{target:"#modalmeasure",toggle:"modal"}, remote: true, class: "btn btn-info",
                            :method => :get %>
            </div>



          </div>
        </div>
        <div  class="dataTables_wrapper no-footer">
          <div  class="table-scrollable">
            <table id="tblmetas" class="table table-striped table-bordered table-hover table-checkable
           order-column dataTable no-footer"
                   role="grid" aria-describedby="sample_1_info">
              <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Acci&oacute;n</th>
              </tr>
              </thead>
              <tbody>
              <% @measures.each do |row| %>
                <tr>
                  <th scope="row"><%= row.id %></th>
                  <td><%= row.name %></td>
                  <td><%= button_to "Editar", {action: "edit", id: row.id},data:{target:"#modalmeasure",toggle:"modal"}, remote: true, class:"btn btn-primary",
                                    :method => :get %>
                    <%= button_to "Eliminar", {action: "deletemeasure", id: row.id},data:{target:"#modalDelGlobal",toggle:"modal"}, remote: true,
                                  class:"btn btn-danger",
                                  :method => :get %>
                  </td>
                </tr>
              <% end %>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>

<div class="modal fade draggable-modal ui-draggable" id="modalmeasure" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" id="modalmeasuredialog">

  </div>
</div>


<script type="text/javascript">
    $(document).ready(function() {
        $('#tablameasure').DataTable();
        $('#modalmeasure').on('hidden.bs.modal', function (e) {
            $("#modalmeasuredialog").html("");
        });
    } );
</script>