
<div class="page-bar">
  <ul class="page-breadcrumb">
    <li>
      <a href="#">Lista de Metas</a>
      <i class="fa fa-circle"></i>
    </li>
  </ul>
</div>

<h1 class="page-title"> Metas
  <small>Crear y Editar Metas</small>
</h1>

<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet light bordered">
      <div class="portlet-title">
        <div class="caption font-dark">
          <i class="icon-settings font-dark"></i>
          <span class="caption-subject bold uppercase"> Lista de Metas</span>
        </div>

      </div>
      <div class="portlet-body">
        <div class="table-toolbar">
          <div class="row">


            <div class="col-md-2">
              <div class="form-group">
                <label for="">Filtrar por ODS</label>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-group">

                <%= select("goal", "goal_id", Goal.all.collect {|p| [ p.number, p.id ] },
                           { include_blank: false,
                             prompt: "Seleccione Un ODS"},
                           {:class => "form-control select2"}) %>

              </div>
            </div>

            <div class="col-sm-2">
              <div class="btn-group">
                <%= button_to "Nueva Meta", { action: "new" },data:{target:"#modalmetas",toggle:"modal"}, remote: true,
                              class: "btn sbold green",
                              :method => :get %>
              </div>
            </div>



          </div>
        </div>
        <div  class="dataTables_wrapper no-footer">
          <div  class="table-scrollable">
          <table id="tblmetas" class="table table-striped table-bordered table-hover table-checkable
           order-column dataTable no-footer"
                 role="grid" aria-describedby="sample_1_info">
            <thead>
            <tr>
              <th scope="col">ODS</th>
              <th scope="col">#</th>
              <th scope="col">Nombre</th>
              <th scope="col">Descrici&oacute;n</th>
              <th scope="col">Disponible</th>
              <th scope="col">Acci&oacute;n</th>
            </tr>
            </thead>
            <tbody>
            <% @targets.each do |row| %>
              <tr>
                <th scope="row"><%= row.goal.number %></th>
                <th scope="row"><%= row.number %></th>
                <td><%= row.name %></td>
                <td><%= row.description %></td>
                <td><% if row.available==true
                         concat "SI";
                       else
                         concat  "NO";
                       end %></td>
                <td><%= button_to "Editar", {action: "edit", id: row.id},data:{target:"#modalmetas",toggle:"modal"}, remote: true, class:"btn btn-primary",
                                  :method => :get %>
                  <%= button_to "Eliminar", {action: "deletetarget", id: row.id},data:{target:"#modalDelGlobal",toggle:"modal"}, remote: true,
                                class:"btn btn-danger",
                                :method => :get %>
                </td>
              </tr>
            <% end %>

            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>

<div class="modal fade draggable-modal ui-draggable" id="modalmetas" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" id="modaltargetdialog">

  </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#tblmetas').DataTable();
        $('#modalmetas').on('hidden.bs.modal', function (e) {
            $("#modaltargetdialog").html("");
        });

       jQuery("select2").select2();
    } );
</script>
