

<div class="row bg-title">
  <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
    <h4 class="page-title">Usuarios</h4></div>
  <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
    <ol class="breadcrumb">
      <li class="">Configuraciones</li>
      <li class="active">Usuarios</li>
    </ol>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">


  <div class="col-md-12">
    <div class="white-box">


      <div class="row">
        <div class="btn-group m-b-20">

          <div class="col-sm-2">
            <div class="float-left">
              <%= button_to "Nuevo Usuario", "users/sign_up",data:{toggle:"modal"}, remote: true, class: "btn btn-info",
                            :method => :get %>
            </div>
          </div>


        </div>
      </div>
      <br>

      <div class="table-responsive" >
        <table class='table table-striped dataTable table-bordered' id="tblusers">

          <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Identificaci&oacute;n</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">email</th>
            <th scope="col">Ciudad Asignada</th>
            <th scope="col">&Uacute;ltima conexi&oacute;n</th>
            <th scope="col">Acci&oacute;n</th>
          </tr>
          </thead>
          <tbody>

          <% @users.each do |row| %>
            <tr>
              <th scope="row"><%= row.id %></th>
              <th scope="row"><%= row.identification %></th>
              <th scope="row"><%= row.name %></th>
              <td scope="row"><%= row.surname %></td>
              <th scope="row"><%= row.email %></th>

              <td><% unless row.city.nil? %>
                  <%= row.city.name %>
                <% end %></td>
              <td><%= row.last_sign_in_at %></td>
              <td><%= button_to "Editar",edit_user_path(row),data:{toggle:"modal"},
                                remote: true, class:"btn btn-primary",
                                :method => :get %>
                <%= button_to "Eliminar","newuser",data:{toggle:"modal"}, remote: true,
                              class:"btn btn-danger",
                              :method => :get %>
              </td>
            </tr>

          <% end %>
          </tbody>

        </table>
      </div>


    </div>


  </div>
</div>

<div class="modal fade" id="modalusers" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" id="modaluserdialog">

  </div>
</div>

<script type="text/javascript">

    $(document).ready(function() {
        $('#modalusers').on('hidden.bs.modal', function (e) {
            $("#modaluserdialog").html("");
        });
        TablesDatatables.init();
    } );

</script>



