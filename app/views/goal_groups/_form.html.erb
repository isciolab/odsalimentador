
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @goalgroup, remote: true do |f| %>
        <div class="modal-body">
          <div class="card-body card-block">

            <%= render 'layouts/viewerror', object: @goalgroup %>

          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre", id:"namegoalgroup",
                             autofocus:true %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit title_button, class: "btn btn-primary"%>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </div>
        </div>
      <% end %>
    </div>

