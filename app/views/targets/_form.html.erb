
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

      </div>
      <%= form_for @target, remote: true do |f| %>
        <div class="modal-body">
          <div class="card-body card-block">

            <%= render 'layouts/viewerror', object: @target %>

          <div class="form-group ">
            <label for="company" class=" form-control-label">Nombre</label>
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre",autofocus:true %>
          </div>
          <div class="form-group ">
            <label for="company" class=" form-control-label">ODS</label>
            <%= f.collection_select :goal_id,Goal.where(delete_at: [nil]).collect { |t| [ t.id, "#{t.number}- #{t.name}" ] },
                                    :first,
                                    :last,  {prompt: "Seleccione un ODS"},
                                    {class: "custom-select chosen"} %>
          </div>
            <div class="form-group ">
              <label for="company" class=" form-control-label">N&uacute;mero</label>
              <%= f.text_field :number, class: "form-control input-lg", placeholder: "Numero"%>
            </div>
          <div class="form-group row">
            <div class="col-sm-3">
            <label class="form-check-label" for="gridCheck">
              Disponible
            </label>
            </div>
            <div class="col-sm-9">
              <%= f.label :available, "Si", :value => "1"  %>
              <%= f.radio_button :available, true, :checked =>true %>
              <%= f.label :available, "No", :value => "0" %>
              <%= f.radio_button :available, false %>
            </div>
          </div>
        </div>
          <div class="modal-footer">
            <%= f.submit title_button, class: "btn btn-primary"%>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          </div>
      <% end %>
    </div>
    </div>
  </div>
