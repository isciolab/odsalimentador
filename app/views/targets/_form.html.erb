<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
id="modalmeasure">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

      </div>
      <%= form_for @target, remote: true do |f| %>
        <div class="modal-body">


          <div class="form-group ">
            <%= f.collection_select :goal_id, Goal.all, :id, :name, {prompt: "Seleccione un ODS"},
                                    {class: "custom-select"} %>
          </div>
          <div class="form-group ">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre" %>
          </div>
          <div class="form-group row">
            <div class="col-sm-3">
            <label class="form-check-label" for="gridCheck">
              Disponible
            </label>
            </div>
            <div class="col-sm-9">
            <%= f.check_box :available, class: "form-check-input", checked_value:"1",uncheked_value:"0" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit title_button, class: "btn btn-primary btn-lg btn-block", disabled:true %>
        </div>
      <% end %>
    </div>
  </div>
</div>