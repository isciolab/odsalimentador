
<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Departamentos #index</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="#">Configuraciones</a></li>
          <li class="active">Departamentos</li>
        </ol>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="float-left">
      <%= button_to "Nuevo Departamento", { action: "new" },data:{target:"#modaldepartamento",toggle:"modal"}, remote: true, class: "btn btn-info",
                    :method => :get %>
    </div>
  </div>

</div>

<div class="content mt-3">

  <div class="animated fadeIn">
    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Lista de Departamentos</strong>
          </div>
          <div class="card-body">
            <table id="tabladepartamentos" class="table table-striped table-bordered">
              <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Acci&oacute;n</th>
              </tr>
              </thead>
              <tbody>
              <% @departments.each do |row| %>
                <tr>
                  <th scope="row"><%= row.id %></th>
                  <td><%= row.name %></td>
                  <td><%= button_to "Editar", {action: "edit", id: row.id},data:{target:"#modaldepartamento",toggle:"modal"}, remote: true, class:"btn btn-primary",
                                    :method => :get %>
                    <%= button_to "Eliminar", {action: "deletedepartment", id: row.id},data:{target:"#modalDelGlobal",toggle:"modal"}, remote: true,
                                  class:"btn btn-danger",
                                  :method => :get %>
                  </td>
                </tr>
              <% end %>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div>

<div class="modal fade" id="modaldepartamento" tabindex="-1" role="dialog"
     aria-labelledby="mediumModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" id="modaldepartmentdialog">

  </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#tabladepartamentos').DataTable();
        $('#modaldepartamento').on('hidden.bs.modal', function (e) {
            $("#modaldepartmentdialog").html("");
        });
    } );
</script>
