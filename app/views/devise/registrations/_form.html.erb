<div class="modal-content">

  <div class="modal-header">
    <h4 class="modal-title"><%= title %></h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
    </button>
  </div>

  <%= form_for(resource, :as => resource_name,
               :url => registration_path(resource_name),
               :html => {:id => "sign_up_user"},
               :format => :json,
               :remote => true ) do |f|
     %>
    <div class="modal-body">
      <div class="card-body card-block">
        <%= render 'layouts/viewerror', object: @user %>

        <%= devise_error_messages! %>

        <div class="form-group">
          <label for="company" class=" form-control-label">Rol</label>
        <%= f.collection_select :role_id, Role.where(delete_at: [nil]), :id, :name,
                                {prompt: "Seleccione un rol a asignar"},
                                {class: "custom-select chosen"} %>
        </div>

        <div class="form-group">
          <label for="company" class=" form-control-label">Ciudad</label>
          <%= f.collection_select :city_id, City.where(delete_at: [nil]), :id, :name,
                                  {prompt: "Seleccione una ciudad a asignar"},
                                  {class: "custom-select chosen"} %>
        </div>

        <div class="form-group">
          <label for="company" class=" form-control-label">Nro Identificaci&oacute;n</label>
          <%= f.text_field :identification, :autofocus => true, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <label for="company" class=" form-control-label">Nombres</label>
          <%= f.text_field :name, :autofocus => true, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <label for="company" class=" form-control-label">Apellidos</label>
          <%= f.text_field :surname, :autofocus => true, class: "form-control input-lg" %>
        </div>


        <div class="form-group">
          <label for="company" class=" form-control-label">Email</label>
          <%= f.email_field :email, :autofocus => true, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control input-lg" %>
        </div>


        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control input-lg" %>
        </div>
      </div>
    </div>
    <div class="modal-footer">

      <%= f.submit title_button, class: "btn btn-primary"%>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>

    </div>

  <% end %>
</div>

<script></script>