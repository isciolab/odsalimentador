var Target = {
    tablatarget: null,
    initTarget: function () {

        $('#modalmetas').on('hidden.bs.modal', function (e) {
            $("#modaltargetdialog").html("");
        });

        jQuery(".chosen").chosen({
            disable_search_threshold: 10,
            no_results_text: "No se han encontrado resultados!",
            width: "100%"
        });


        Target.tableCargarTodos();

    },
    tableCargarTodos: function () {

        $.ajax({
            type: 'GET',
            data: {goal: $("#goal_goal_id").val()},
            url: base_url + '/targets/tbltargets',
            success: function (data) {
                $("#opentbltarget").html('');
                $("#opentbltarget").html(data);
                TablesDatatables.init();
            }
        });
    },
    initModalTarget: function () {


        jQuery("#target_goal_id").chosen({
            disable_search_threshold: 10,
            no_results_text: "No se han encontrado resultados!",
            width: "100%"
        });
        setTimeout( function (){
            $('*[autofocus]').focus()
        },500)

    }

}


