
<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Nuevo Valor Indicador#index</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="#">Indicadores</a></li>
          <li class="active">Valores Indicadores</li>
        </ol>
      </div>
    </div>
  </div>

  <div class="col-md-2">
    <div class="form-group">
      <label for="">Filtrar por ODS</label>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">

      <%= select("goal", "goal_id", Goal.all.collect {|p| [ p.number, p.id ] },
                 { include_blank: false,
                   prompt: "Seleccione Un ODS"},
                 {:class => "form-control chosen"}) %>

    </div>
  </div>

  <div class="col-md-2">
    <div class="form-group">
      <label for="">Filtrar por Meta</label>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">

      <%= select("target", "target_id", Target.all.where(goal_id: :goal_id),
                 { include_blank: false,
                   prompt: "Seleccione Una Meta"},
                 {:class => "form-control chosen",id:"target_id"}) %>

    </div>
  </div>


  <div class="col-md-2">
    <div class="form-group">
      <label for="">Filtrar por a√±o</label>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">

      <select  class="form-control chosen">
        <% for i in 2000..2018 %>
          <option value="<%= i %>"><%= i %></option>
        <% end %>
      </select>

    </div>
  </div>



</div>

<div class="content mt-3">

  <div class="animated fadeIn">
    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="col-sm-2">
              <div class="float-left">

                <%= button_to "Guardar", { action: "newindicadorvalue" }, remote: false, class: "btn btn-info",
                              :method => :get %>
              </div>
            </div>
          </div>
          <div class="card-body">
            <table id="tablanewindicvalue" class="table table-striped table-bordered">
              <thead>
              <tr>
                <th scope="col"></th>

                <% @indicators.each do |row| %>
                  <th scope="col"><%= row.number %></th>
                <% end %>
              </tr>
              </thead>
              <tbody>
              <% @cities.each do |row| %>
                <tr>
                  <th scope="row"><%= row.name %></th>

                  <% @indicators.each do |rowindicator| %>
                    <td ><input type="text" class="form-control"></td>
                  <% end %>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div>

<div class="modal fade" id="modalindicador" tabindex="-1" role="dialog"
     aria-labelledby="mediumModalLabel" aria-hidden="true">
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#tablanewindicvalue').DataTable();

            jQuery(".chosen").chosen({
                disable_search_threshold: 10,
                no_results_text: "Oops, nothing found!",
                width: "100%"
            });
    } );
</script>

